				</actions>
			</action>

			<action>
				<condition var1="tw_check_partition_list" op="!=" var2="1"/>
				<actions>
					<action function="set">partitionlisterror=1</action>
					<action function="page">advancedwipe</action>
				</actions>
			</action>
		</page>

